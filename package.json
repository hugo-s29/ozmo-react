{
  "name": "ozmo-react",
  "version": "0.0.1",
  "description": "Ozmo markup language for React",
  "main": "build/main/index.js",
  "typings": "build/main/index.d.ts",
  "types": "build/main/index.d.ts",
  "module": "build/module/index.js",
  "repository": "https://github.com/hugo-s29/ozmo-react",
  "license": "MIT",
  "keywords": [
    "markup",
    "compiler",
    "language"
  ],
  "scripts": {
    "build": "npm run build:main && npm run build:module",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "format": "prettier \"src/**/*.ts\" --write",
    "prepublish": "npm run build",
    "postinstall": "echo This project is still in beta, it might not work as expected everywhere\nFeel free to contribute"
  },
  "dependencies": {
    "ozmo-compile": "^0.0.1"
  },
  "devDependencies": {
    "@types/node": "^14.0.1",
    "@types/react": "^16.9.35",
    "prettier": "^1.18.2",
    "react": "^16.13.1",
    "typescript": "^3.5.3"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  }
}
